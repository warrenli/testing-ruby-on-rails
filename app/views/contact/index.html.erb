<% title ContactForm.human_name %>

<% form_for :contactForm do |f| %>

  <%= f.label :sender_name %><br />
  <%= f.text_field :sender_name %><br /><br />

  <%= f.label :sender_email %><br />
  <%= f.text_field :sender_email %><br /><br />

  <%= f.label :recipient_name %><br />
  <%= f.text_field :recipient_name %><br /><br />

  <%= f.label :recipient_email %><br />
  <%= f.text_field :recipient_email %><br /><br />

  <%= f.label :subject %><br />
  <%= f.text_field :subject %><br /><br />

  <%= f.label :message %><br />
  <%= f.text_area :message %><br /><br />

  <%= f.submit t('contact_form.index.send_button') %>

<% end %>

